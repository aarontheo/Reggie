{
  "manifest_version": 3,
  "name": "Reggie",
  "version": "1.0",
  "description": "A registration helper for students of BYU-I.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.byui.edu/*"],
      "js": ["content.js"]
    }
  ]
}
