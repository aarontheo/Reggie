{
  "manifest_version": 3,
  "name": "Reggie",

  "version": "1.0",
  "description": "A registration helper for students of BYU-I.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "images/icon-16.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png"
  },
  "content_scripts": [
    {
      "matches": ["*://iplan.byui.edu/*", "<all_urls>"],
      "js": ["scripts/test.js"]
    }
  ]
}
